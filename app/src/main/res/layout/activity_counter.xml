<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="br.com.ccp.counter.view.CounterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/activity_horizontal_padding"
        android:paddingBottom="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_vertical_padding"
        android:paddingEnd="@dimen/activity_vertical_padding">

        <TextView
            android:id="@+id/count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/count_text_size" />

        <Button
            android:id="@+id/add_count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count_text_view"
            android:layout_toStartOf="@id/reset_count_button"
            android:text="@string/add_score_button" />

        <Button
            android:id="@+id/remove_count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count_text_view"
            android:layout_toEndOf="@id/reset_count_button"
            android:text="@string/remove_score_button" />

        <Button
            android:id="@+id/reset_count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count_text_view"
            android:layout_centerHorizontal="true"
            android:text="@string/reset_score_button" />

    </RelativeLayout>

</ScrollView>